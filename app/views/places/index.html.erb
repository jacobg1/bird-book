<div class="dropdown">
  <button class="dropbtn">Menu</button>
<div class="dropdown-content">
  <%= link_to 'Add your location!', new_place_path, :class => 'home-links' %>

<% if !current_user %>
<%= link_to "Sign Up", new_user_registration_path, :class => 'home-links' %>
<%= link_to "Sign In", new_user_session_path, :class => 'home-links'  %>
<% else %>
<%= link_to "Sign Out", destroy_user_session_path, :class => 'home-links', method: :delete %>
<% end %>
</div>
</div>
<hr>
<h1 class='main-title'>Places</h1>
<hr>
<div class="place-index-img-container">
<% @places.each do |place| %>
<div class="place-index-img-container2">
  <%= link_to place.city, place_posts_path(place)  %>
  <%= link_to place.state, place_posts_path(place) %>
  <%= link_to place.country, place_posts_path(place) %>
  <%= link_to '(edit)', edit_place_path(place) %>
  <hr>
</div>
<img src="<%=place.place_photo_url%>" class='place-index-img'/>

<% end %>

</div>
